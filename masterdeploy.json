{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located."
            },
            "defaultValue": "https://raw.githubusercontent.com/rkuehfus/AzureStarterKit-IaaS-3Tier/master/"
        },
        "envPrefixName": {
            "type": "string",
            "metadata": {
                "description": "Prefix for the environment (2-5 characters)"
            },
            "defaultValue": "test",
            "minLength": 2,
            "maxLength": 5
        },
        "resourceGroupNames": {
            "type": "array",
            "defaultValue": [
                "ManagementNetwork",
                "ManagementCoreServices",
                "ManagementCompute",
                "HubNetwork",
                "HubCoreService",
                "HubCompute"
            ],
            "metadata": {
                "description": "ResourceGroup Names"
            }
        },
        "resourceGroupLocation": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "WorkspaceLocation": {
            "type": "string",
            "defaultValue": "East US",
            "allowedValues": [
                "East US",
                "West Europe",
                "Southeast Asia",
                "Australia Southeast"
            ],
            "metadata": {
                "description": "Specify the region for your Workspace"
            }
        },
        "ManvNetName": {
            "type": "string",
            "defaultValue": "ManagementvNet",
            "metadata": {
                "description": ""
            }
        },
        "HubvNetName": {
            "type": "string",
            "defaultValue": "HubvNet",
            "metadata": {
                "description": ""
            }
        }
    },
    "variables": {
        "ManResourceGroupName": "[concat(parameters('envPrefixName'),parameters('resourceGroupNames')[0])]",
        "HubResourceGroupName": "[concat(parameters('envPrefixName'),parameters('resourceGroupNames')[3])]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('resourceGroupLocation')]",
            "name": "[concat(parameters('envPrefixName'),parameters('resourceGroupNames')[copyIndex()])]",
            "copy": {
                "name": "rgiterator",
                "count": "[length(parameters('resourceGroupNames'))]"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "networkDeployment",
            "resourceGroup": "[variables('ManResourceGroupName')]",
            "dependsOn": [
                "rgiterator"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), '1-Management/ManagementDeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "ManvNetName": {
                        "value": "[parameters('ManvNetName')]"
                    },
                    "HubvNetName": {
                        "value": "[parameters('HubvNetName')]"
                    },
                    "HubResourceGroupName": {
                        "value": "[variables('HubResourceGroupName')]"
                    },
                    "ManResourceGroupName": {
                        "value": "[variables('ManResourceGroupName')]"
                    },
                    "envPrefixName": {
                        "value": "[parameters('envPrefixName')]"
                    },
                    "WorkspaceLocation": {
                        "value": "[parameters('WorkspaceLocation')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "ManResourceGroupName": {
            "type": "string",
            "value": "[variables('ManResourceGroupName')]"
        },
        "HubResourceGroupName": {
            "type": "string",
            "value": "[variables('HubResourceGroupName')]"
        }
    }
}