{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
              "description": "The base URI where artifacts required by this template are located."
            },
            "defaultValue": "https://raw.githubusercontent.com/rkuehfus/AzureStarterKit-IaaS-3Tier/master/"
          },        
        "envPrefixName": {
            "type": "string",
            "metadata": {
                "description": "Prefix for the environment (2-5 characters)"
            },
            "defaultValue": "test",
            "minLength": 2,
            "maxLength": 5
        },
        "resourceGroupNames": {
            "type": "array",
            "defaultValue": [
                "Management-Network",
                "Management-CoreServices",
                "Management-Compute",
                "Hub-Network",
                "Hub-CoreService",
                "Hub-Compute"
            ],
            "metadata": {
                "description": "ResourceGroup Names"
            }
        },
        "resourceGroupLocation": {
            "type": "string",
            "defaultValue": "eastus"
        }
    },
    "variables": {
        "ManResourceGroupName": "[concat(parameters('envPrefixName'),'-',parameters('resourceGroupNames')[0])]",
        "HubResourceGroupName": "[concat(parameters('envPrefixName'),'-',parameters('resourceGroupNames')[3])]"

    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('resourceGroupLocation')]",
            "name": "[concat(parameters('envPrefixName'),'-',parameters('resourceGroupNames')[copyIndex()])]",
            "copy": {
                "name": "iterator",
                "count": "[length(parameters('resourceGroupNames'))]"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "networkDeployment",
            "resourceGroup": "[variables('ManResourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('ManResourceGroupName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('2-Network/networkdeploy.json'))]",
                    "contentVersion":"1.0.0.0"
                 }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "HubNetworkdeployment",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('HubResourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('HubResourceGroupName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('2-Network/hubnetworkdeploy.json'))]",
                    "contentVersion":"1.0.0.0"
                 }
            }
        }
    ],
    "outputs": {
        "ManResourceGroupName":{
            "type": "string",
            "value": "[variables('ManResourceGroupName')]"
        },
        "HubResourceGroupName":{
            "type": "string",
            "value": "[variables('HubResourceGroupName')]"
        }
    }
}